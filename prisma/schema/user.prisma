model block {
  id          String    @id @db.Uuid
  blockerId   String?   @db.Uuid
  blockedId   String?   @db.Uuid
  createdAt   DateTime? @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime? @db.Timestamptz(6)
  blockedIdFK User?     @relation("blocked_id_FK", fields: [blockedId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  blockerIdFK User?     @relation("blocker_id_FK", fields: [blockerId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@schema("public")
}
